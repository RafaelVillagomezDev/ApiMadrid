{
  "compilerOptions": {
    "target": "ES6", // Compila a ES6
    "module": "CommonJS", // Usa el sistema de módulos CommonJS
    "strict": true, // Activa todas las comprobaciones estrictas
    "esModuleInterop": true, // Permite interoperabilidad con módulos ES
    "skipLibCheck": true, // Omite la comprobación de tipos en las bibliotecas
    "forceConsistentCasingInFileNames": true, // Fuerza la consistencia en el uso de mayúsculas/minúsculas
    "outDir": "./dist", // Directorio de salida para los archivos compilados
    "baseUrl": ".", // Configura la URL base para la resolución de módulos
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // Resuelve los módulos en "src/types/*"
    }
  },

  "include": [
    "src/**/*.ts",    // Incluye todos los archivos .ts en src
    "src/**/*.tsx",   // Incluye todos los archivos .tsx en src
    "express.d.ts"
  ],
  "exclude": [
    "node_modules" // Excluir la carpeta node_modules
  ]
}
